<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="414dp"
        android:layout_height="138dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/header_acores_foreground"
        tools:srcCompat="@mipmap/header_acores_foreground" />

    <ImageButton
        android:id="@+id/voltarbtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="577dp"
        android:layout_marginTop="148dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ldsc_btn"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/ldsc_acores_foreground"
                tools:src="@mipmap/ldsc_acores_foreground"
                tools:srcCompat="@mipmap/ldsc_acores_foreground" />

            <ImageButton
                android:id="@+id/ldsc_btn2"
                android:layout_width="350dp"
                android:layout_height="350dp"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/backgrounds/scenic[0]" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>