<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:id="@+id/menuacoresbtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_acores_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/menu_acores_foreground"
        tools:srcCompat="@mipmap/menu_acores_foreground" />

    <ImageButton
        android:id="@+id/menuaveirobtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_aveiro_foreground"
        app:layout_constraintStart_toEndOf="@+id/menuacoresbtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/menu_aveiro_foreground" />

    <ImageButton
        android:id="@+id/menubejabtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_beja_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menuaveirobtn"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/menu_beja_foreground" />

    <ImageButton
        android:id="@+id/menubragabtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="12dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_beja_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:src="@mipmap/menu_braga_foreground"
        tools:srcCompat="@mipmap/menu_braga_foreground" />

    <ImageButton
        android:id="@+id/menubragancabtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_braganca_foreground"
        app:layout_constraintStart_toEndOf="@+id/menubragabtn"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:src="@mipmap/menu_braganca_foreground"
        tools:srcCompat="@mipmap/menu_braganca_foreground" />

    <ImageButton
        android:id="@+id/menucastelobrancobtn"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="12dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/menu_castelobranco_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menubragancabtn"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:src="@mipmap/menu_castelobranco_foreground"
        tools:srcCompat="@mipmap/menu_castelobranco_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="Açores"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuacoresbtn" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:text="Aveiro"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/menuaveirobtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginLeft="104dp"
        android:text="Beja"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/menubejabtn" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:text="Braga"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menubragabtn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:text="Bragança"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/menubragancabtn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:text="Castelo Branco"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/menucastelobrancobtn" />

    <ImageButton
        android:id="@+id/gastronomiabtn"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:layout_marginTop="12dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@mipmap/gastronomia_foreground" />
</android.support.constraint.ConstraintLayout>